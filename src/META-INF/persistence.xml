<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="VentaPorCatalogoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>ventaporcatalogo.modelo.Administrador</class>
    <class>ventaporcatalogo.modelo.Articulo</class>
    <class>ventaporcatalogo.modelo.Cargo</class>
    <class>ventaporcatalogo.modelo.Usuario</class>
    <class>ventaporcatalogo.modelo.Vendedor</class>
    <class>ventaporcatalogo.modelo.catalogo.Categoria</class>
    <class>ventaporcatalogo.modelo.catalogo.ItemCatalogo</class>
    <class>ventaporcatalogo.modelo.catalogo.Producto</class>
    <class>ventaporcatalogo.modelo.ordencompra.EstadoArchivado</class>
    <class>ventaporcatalogo.modelo.ordencompra.EstadoCerrado</class>
    <class>ventaporcatalogo.modelo.ordencompra.EstadoEditable</class>
    <class>ventaporcatalogo.modelo.ordencompra.EstadoOrdenCompra</class>
    <class>ventaporcatalogo.modelo.ordencompra.OrdenCompra</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby:VentaPorCatalogoDB;create=true"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="javax.persistence.jdbc.user" value="admin"/>
    </properties>
  </persistence-unit>
</persistence>
